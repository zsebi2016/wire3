VIEW V_TEAM ( 
	"ID",
	"TEAM_NAME",
	"DESCRIPTION",
	"TEAM_LEAD",
	"PARENT_TEAM",
	"SOURCE") 
AS SELECT DISTINCT
	T.ID,
	TEAM_NAME,
	DESCRIPTION,
	TEAM_LEAD,
	PARENT_TEAM,
	SOURCE
FROM ( EXPERT_TEAM AS T 
	JOIN TEAM_MEMBER AS M ON ( T.ID = M.TEAM_ID ) )
ORDER BY TEAM_NAME
WITH ASSOCIATIONS( JOIN EXPERT_WITH_TEAM AS EXPERTS ON ID = EXPERTS.TEAM_ID )